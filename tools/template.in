&setup
 seed = 1,
 verbosity = 2,
 num_threads = 8
/

&training
 num_epochs = 20,
 batch_size = 32,
 loss_threshold = 5.E-2,
 plateau_threshold = 1.E-1
 learning_rate = 0.01,
 momentum = 0.8,
 l1_lambda = 0.6,
 l2_lambda = 0.0,
 beta1 = 0.9,
 beta2 = 0.999,
 epsilon = 1.E-8,
 shuffle_dataset = .true.,
 batch_learning = .true.,
 adaptive = "adam",
 loss = "nll"
/

&convolution
 cv_num_filters = 32,
 kernel_size = 3,
 stride = 1,
 clip_norm = 2.E1
 padding_type = "same",
 convolution_type = "standard"
/

&pool
 kernel_size = 2,
 stride = 2
 normalisation = "norm"
/

&fully_connected
 hidden_layers = 100,
 clip_norm = 2.E1,
 activation_function = "leaky_relu"
/
